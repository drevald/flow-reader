<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.PrintActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pages_to_print"
                style="@style/label"/>
            <RadioGroup
                android:id="@+id/page_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingTop="10dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <RadioButton
                    android:id="@+id/current_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/form_label"
                    app:buttonTint="#ffffff"
                    android:onClick="setPrintCurrentPage"
                    android:text="@string/current_page"/>
                <RadioButton
                    android:id="@+id/all_pages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/form_label"
                    app:buttonTint="#ffffff"
                    android:onClick="setPrintAllPages"
                    android:text="@string/all_pages"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/custom_page_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="#ffffff"
                        style="@style/form_label"
                        android:onClick="setPrintCustomRange"
                        android:text="@string/pages_range"/>
                    <EditText
                        android:id="@+id/pages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        style="@style/form_label"/>
                </LinearLayout>
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/columns_layout"
                style="@style/label"/>
            <RadioGroup
                android:id="@+id/column"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingTop="10dp">
                <RadioButton
                    android:id="@+id/set_column_width_as_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/form_label"
                    app:buttonTint="#ffffff"
                    android:onClick="setPrintDeviceScreen"
                    android:text="@string/use_device_width"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/set_column_width"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/form_label"
                        app:buttonTint="#ffffff"
                        android:onClick="setColumnWidth"
                        android:text="@string/columns_width"/>
                    <EditText
                        android:id="@+id/column_width"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        style="@style/form_label"
                        android:imeOptions="actionDone"
                        android:singleLine="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/set_columns_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="#ffffff"
                        style="@style/form_label"
                        android:onClick="setColumnsNumber"
                        android:text="@string/columns_number"/>
                    <EditText
                        android:id="@+id/columns_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        style="@style/form_label"
                        android:imeOptions="actionDone"
                        android:singleLine="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/form_label"
                        android:text="@string/gap"/>
                    <EditText
                        android:id="@+id/gap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        style="@style/form_label"
                        android:imeOptions="actionDone"
                        android:singleLine="true"/>
                </LinearLayout>
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/font_size"
                style="@style/label"/>
            <RadioGroup
                android:id="@+id/font_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/font_size_full"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/form_label"
                        app:buttonTint="#ffffff"
                        android:onClick="setOriginal"
                        android:text="@string/font_size_original"/>
                    <RadioButton
                        android:id="@+id/font_size_three_quarters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/form_label"
                        app:buttonTint="#ffffff"
                        android:onClick="setThreeQuaters"
                        android:text="@string/font_size_three_quarters"/>
                    <RadioButton
                        android:id="@+id/font_size_half"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/form_label"
                        app:buttonTint="#ffffff"
                        android:onClick="setHalf"
                        android:text="@string/font_size_half"/>
                    <RadioButton
                        android:id="@+id/font_size_quarter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/form_label"
                        app:buttonTint="#ffffff"
                        android:onClick="setQuater"
                        android:text="@string/font_size_quarter"/>
                </LinearLayout>
            </RadioGroup>
            <TextView
                android:layout_height="100sp"
                android:layout_width="match_parent"/>
        </LinearLayout>
    </ScrollView>

    <!--    </LinearLayout>-->

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            android:layout_weight = "0"/>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight = "1"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/do_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_print" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>